{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [
      "DOM",
      "ES5",
      "ES2015.Promise",
      "es6"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "importHelpers": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "survey-knockout": ["./node_modules/survey-knockout"]
    }
  },
  "exclude": [
    "src/entries/**/*.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}